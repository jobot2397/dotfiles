# Common aliases for all platforms

# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# ls variants
alias ll='ls -la'

# Git shortcuts
alias g='git'
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gl='git pull'
alias gd='git diff'

# Shortcuts
alias h='history'
alias c='clear'

# Zsh
alias reload="source ~/.zshrc"
alias zedit="zed ~/dotfiles/zsh/.zshrc"
